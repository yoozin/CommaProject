<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="mapper.commentMapper">
    <!-- 댓글 전체 조회 -->
    <select id="selectAll" parameterType="int" resultType="comment.vo.CommentVO">
  		select * from comment where border_no = #{borderNo}
  	</select>
  	<select id="getComment" parameterType="int" resultType="comment.vo.CommentVO">
  		select * from comment where comment_no = #{commentNo}
  	</select>
  	<select id="getCmtCount" parameterType="int" resultType="int">
  		select count(*) from comment where border_no=#{borderNo}
  	</select>
  	<insert id="insertCmt" parameterType="comment.vo.CommentVO">
  		insert into comment(comment_writer, comment_text, border_no)
  		values (#{commentWriter},#{commentText},#{borderNo})
  	</insert>
  	<update id="updateCmt" parameterType="comment.vo.CommentVO">
  		update comment set comment_writer=#{commentWriter}, comment_text=#{commentText} 
  		where comment_no=#{commentNo}
  	</update>
  	<delete id="deleteCmt" parameterType="int">
  		delete from comment where comment_no=#{commentNo}
  	</delete>
    </mapper>